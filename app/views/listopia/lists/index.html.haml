%h1 Listing lists
%table
  %tr
    %th Name
    %th Type
    %th Description
    %th Slug
    %th Bag
    %th User
    %th Items count
    %th
    %th
    %th
  - @lists.each do |list|
    %tr
      %td= list.name
      %td= list.description
      %td= list.slug
      %td= list.bag
      %td= list.user_id
      %td= list.items_count
      %td= link_to 'Show', list
      %td= link_to 'Edit', edit_list_path(list)
      %td= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }
%br/
